<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template" style="padding: 40px 15px;text-align: center;">
                <h1>Oops!</h1>
                <h2>@ViewBag.ExceptionTitle</h2>
                <div class="error-details">
                    @ViewBag.ExceptionDescription
                </div>
                @if (ViewBag.ExceptionTitle == "Authentication Exception")
                {
                    <a href="https://myaccount.google.com/lesssecureapps" target="_blank" class="btn btn-primary btn-lg">Ativar</a>
                    <a href="https://support.google.com/accounts/answer/6010255" target="_blank" class="btn btn-primary btn-lg">Ajuda</a>
                }
                <div class="error-actions" style="margin-top:15px;margin-bottom:15px;">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg" style="margin-right:10px;"><span class="glyphicon glyphicon-home"></span>Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>
