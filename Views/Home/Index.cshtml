@model MassMailWeb.Models.Email

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous" asp-fallback-src="~/Scripts/jquery-3.6.0.min.js" asp-fallback-test="window.jQuery"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" asp-fallback-src="~/Scripts/jquery.validate.min.js" asp-fallback-test="window.jQuery"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" asp-fallback-src="~/Scripts/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery"></script>

	<title>MassMail</title>
</head>

<h1 class="d-flex justify-content-center">MassMail</h1><br />

<form method="post" asp-controller="Home" asp-action="Index" class="container align-items-center vertical-center">
	<div class="row align-items-center g-3" style="background-color: #ededed;">
		<div class="col-6">
			<input asp-for="From" placeholder="De" class="form-control"/>
			<span asp-validation-for="From" style="color: red;"></span>
		</div>
		<div class="col-6">
			<input asp-for="Password" placeholder="Senha" type="password" class="form-control" />
			<span asp-validation-for="Password" style="color: red;"></span>
		</div>
		<div class="row-auto">
			<input asp-for="ToField" placeholder="Para" class="form-control" />
			<span asp-validation-for="ToField" style="color: red;"></span>
			<input type="checkbox" class="form-check-input" asp-for="BccOrNot"/>
			<label asp-for="BccOrNot"></label>
		</div>
		<div class="row-auto">
			<input asp-for="Subject" placeholder="Assunto" class="form-control" />
			<span asp-validation-for="Subject" style="color: red;"></span>
		</div>
		<div class="row-auto">
			<textarea asp-for="Body" class="form-control" rows="6" placeholder="Mensagem"></textarea>
			<input type="checkbox" asp-for="HtmlOrNot" class="form-check-input" />
			<label asp-for="HtmlOrNot"></label>
			<span asp-validation-for="Body" style="color: red;"></span>
		</div>
		<div class="d-flex justify-content-center row-auto">
			<button type="submit" class="d-flex justify-content-center btn btn-primary col-2" value="Enviar" style="color: black; background-color: yellow; font-weight: 700;">Enviar</button>
		</div>
		
	</div>
</form>

@if (ViewBag.SentSuccessfully)
{
	<script type="text/javascript">
		window.onload = function(){
			alert("E-mail enviado com sucesso!");
		}
	</script>
}
